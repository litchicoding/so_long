##### Executable program's name ###############################################
NAME = libft.a

##### Define path and variables ###############################################
###############################################################################
CC = cc
RM = rm -f
CFLAGS = -Wall -Wextra -Werror -g
AR = ar rcs

##### Define source files and objects #########################################
###############################################################################
SRC = ft_strlen.c ft_lstadd_node_back.c ft_lstlast.c ft_lstsize.c \
		ft_printf.c ft_printf_adress.c ft_printf_char.c ft_printf_digit.c \
		ft_printf_string.c ft_itoa.c ft_strnstr.c
HEADER = libft.h 
OBJ= $(SRC:.c=.o)

##### Rule by default #########################################################
###############################################################################
all: $(NAME)

##### Create objectc (.o) from source fils (.c )###############################
###############################################################################
%.o: %.c
	@$(CC) -c $(CFLAGS) -I$(HEADER) $< -o $@

##### Linking objects in executable ###########################################
###############################################################################
$(NAME): $(OBJ)
	@$(AR) $(NAME) $(OBJ)

##### Clean objects ###########################################################
###############################################################################
clean:
	@$(RM) -r *.o

##### Clean executable ########################################################
###############################################################################
fclean: clean
	@$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
